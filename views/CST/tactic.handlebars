                                                                    <button id="btnSave" disabled="disabled" type="button" onclick="return savedigitalpoint('Draft');" class="btn btn-default">Save as draft</button>
                                                                    <button id="btnsubmit" disabled="disabled" type="button" onclick="return savedigitalpoint('Complete');" class="btn btn-primary">Submit & Export</button>
